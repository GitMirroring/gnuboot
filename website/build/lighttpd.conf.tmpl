server.bind             = "localhost"
server.port		= LIGHTTPD_PORT
server.document-root    = var.CWD + "/site/"
dir-listing.activate	= "enable"
index-file.names	= ( "index.html" )
mimetype.assign		= (
				".css"  => "text/css",
				".dot"  => "text/plain",
				".gif"  => "image/gif",
				".html" => "text/html",
				".jpeg" => "image/jpeg",
				".jpg"  => "image/jpeg",
				".js"   => "application/x-javascript",
				".png"  => "image/png",
				".txt"  => "text/plain",
				""      => "application/octet-stream"
			)
