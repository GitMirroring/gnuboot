# This script assumes that the current working directory is the root
# of libreboot_src or libreboot git

[ "x${DEBUG+set}" = 'xset' ] && set -v
set -u -e

topdir="$(realpath "$(dirname "$(dirname "$(dirname "$(dirname "$0")")")")")"

build_ich9utils()
{
    source "${topdir}"/config.sh
    source "${topdir}"/resources/scripts/misc/guix.sh
    source_guix_profile

    guix time-machine \
        --commit=${GUIX_REVISION} -- \
        build \
            -L "${topdir}"/resources/guix/ \
            -L "${topdir}"/resources/guix/gnuboot/patches/ \
            --system=i686-linux \
            ich9utils
}

ich9gen="$(build_ich9utils)/bin/ich9gen"

[ -d "${topdir}/descriptors/" ] || mkdir -p "${topdir}/descriptors/"
[ -d "${topdir}/descriptors/ich9m/" ] || mkdir -p "${topdir}/descriptors/ich9m/"
rm -f "${topdir}"descriptors/ich9m/*
# ich9gen generate files in the current directory
(
    cd "${topdir}"/descriptors/ich9m/
    "${ich9gen}"
)

"${topdir}"/resources/packages/descriptors/test
